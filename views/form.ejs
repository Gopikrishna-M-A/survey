      <form id="survey-form" action="/form" method="post">
        <fieldset>
          <legend>Let us know about you!</legend>

          <label id="name-label" for="name"
            >Name:
            <input
              id="name"
              name="name"
              type="text"
              placeholder=" Enter your name"
              required
            />
          </label>

          <label id="email-label" for="email"
            >Email:
            <input
              id="email"
              name="email"
              type="email"
              placeholder=" Enter your Email"
              required
            />
          </label>

          <label id="email-label" for="Phone"
            >Phone:
            <input
              id="Phone"
              name="Phone"
              type="tel"
              placeholder=" Enter your Phone Number"
              required
            />
          </label>

          <label id="number-label" for="age"
            >Age (years):
            <input
              id="number"
              name="age"
              type="number"
              placeholder=" Age"
              min="5"
              max="120"
              required
            />
          </label>
        </fieldset>

        <fieldset>
          <legend>Are you a teacher or a student?</legend>

          <label id="student-label" for="role">
            <input id="student" name="role" type="radio" value="student" />
            Student
          </label>

          <label id="teacher-label" for="role">
            <input id="teacher" name="role" type="radio" value="teacher" />
            Teacher
          </label>
        </fieldset>

        <fieldset>
          <legend>Area of Interest</legend>

          <label id="content1-label" for="stack">
            <input
              id="content1"
              name="stack"
              type="radio"
              value="Web development"
            />
            Web development
          </label>

          <label id="content2-label" for="stack">
            <input
              id="content2"
              name="stack"
              type="radio"
              value="App development"
            />
            App development
          </label>

          <label id="content3-label" for="stack">
            <input
              id="content3"
              name="stack"
              type="radio"
              value="Machine learning"
            />
            Machine learning
          </label>

          <label id="content4-label" for="stack">
            <input
              id="content4"
              name="stack"
              type="radio"
              value="Cyber security"
            />
            Cyber security
          </label>
        </fieldset>

        <fieldset>
          <legend>Sharable Links</legend>
          <label id="name-label" for="resume"
            >Resume Link
            <input
              id="resume"
              name="resume"
              type="text"
              placeholder="Link to your Resume"
              required
            />
          </label>

          <label id="name-label" for="fb"
            >Facebook Link
            <input
              id="fb"
              name="fb"
              type="text"
              placeholder="Link to your facebook account"
            />
          </label>

          <label id="name-label" for="Twitter"
            >Twitter Link:
            <input
              id="Twitter"
              name="Twitter"
              type="text"
              placeholder="Link to your twitter account"
            />
          </label>

          <label id="name-label" for="linkedin"
            >LinkedIn Link:
            <input
              id="linkedin"
              name="linkedin"
              type="text"
              placeholder="Link to your linkedIn account"
            />
          </label>
        </fieldset>

        <label id="else-label" for="msg"
          >Cover Letter
          <textarea
            placeholder="I am interested in..."
            id="else"
            name="msg"
            rows="5"
            cols="30"
          ></textarea>
        </label>

        <input class="mt-2" id="submit" type="submit" value="Submit" />
      </form>
